<UserControl x:Class="klm.counters"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="16" d:DesignWidth="76">
    <Grid>
        <TextBlock x:Name="num" HorizontalAlignment="Left" Margin="21,0,0,0" TextWrapping="Wrap" Width="34" TextAlignment="Center" FontSize="14" Height="16" VerticalAlignment="Top" Foreground="Black"><Run Text="0"/><LineBreak/><Run/></TextBlock>
        <Button x:Name="plus" Content="+" HorizontalAlignment="Left" Margin="60,0,0,0" VerticalAlignment="Bottom" Width="16" Height="16" FontWeight="Bold" Click="plus_Click" Foreground="White" BorderBrush="{x:Null}" Background="#FF9CB3BE"/>
        <Button x:Name="minus" Content="-" Margin="0,0,60,0" VerticalAlignment="Top" Height="16" FontWeight="Bold" Click="minus_Click" Width="16" BorderBrush="{x:Null}" Foreground="White" Background="#FF9CB3BE" FontFamily="Microsoft YaHei" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>

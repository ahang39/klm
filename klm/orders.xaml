<UserControl x:Class="klm.orders"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="300" Height="160" Width="120">
    <Grid Margin="0,0,0,0" Width="120" Height="160">
        <StackPanel HorizontalAlignment="Left" Height="160" Margin="0,0,0,0" VerticalAlignment="Center" Width="120">
            <TextBlock x:Name="name" Text="name" Height="30" VerticalAlignment="Center" FontSize="22" Foreground="#FF48577E" Margin="1,0,41,0"/>
            <TextBlock x:Name="option" Text="option" Height="58" VerticalAlignment="Center" FontSize="40" Foreground="#FFAE5050" HorizontalAlignment="Center" FontWeight="Bold" Margin="-5,0"/>
            <TextBlock x:Name="price" Text="price" Height="40" VerticalAlignment="Center" FontSize="20" Foreground="#FF4889A8" HorizontalAlignment="Center"/>
            <TextBlock x:Name="time" Text="time" Height="57" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0.0,0" TextAlignment="Center" Width="130" FontSize="11"/>
        </StackPanel>
    </Grid>

</UserControl>
